<Window x:Class="Selenium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Selenium"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black">
            <Grid Background="AliceBlue">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Text="Input start date" 
                           VerticalAlignment="Center"
                           Margin="20"
                           FontSize="14"
                           FontFamily="Arial"/>
                <TextBlock Grid.Row="1" 
                           Grid.Column="0" 
                           Text="Input finish date" 
                           VerticalAlignment="Center"
                           Margin="20"
                           FontSize="14"
                           FontFamily="Arial"/>
                <TextBlock Grid.Row="2" 
                           Grid.Column="0" 
                           Text="value" 
                           VerticalAlignment="Center"
                           Margin="20"
                           FontSize="14"
                           FontFamily="Arial"/>
                <DatePicker Name="DateFrome" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"/>
                <DatePicker Name="DateTo" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                <TextBox Name="Value" Grid.Row="2" Grid.Column="1" Height="30"/>
                <Button x:Name="StartBrn" 
                        Grid.Row="3" Grid.Column="1" 
                        Height="40" 
                        Content="Start Parser" 
                        FontSize="20"
                        Click="StartBrn_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
