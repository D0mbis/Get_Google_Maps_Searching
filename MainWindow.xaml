<Window x:Class="Selenium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Selenium"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="510" ResizeMode="NoResize">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black">
            <Grid Background="#FF0777C0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" 
                           Grid.Column="1" 
                           Text="Дадай посилання для пошуку:" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="25"
                           FontFamily="Arial"/>
                <TextBlock Grid.Row="2" 
                           Text="Обери шлях до файлу з результатами:" 
                           FontSize="16"
                           FontFamily="Arial"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center"
                           />
                <TextBlock Grid.Row="3" 
                           Text="Обери швидкість пошуку:" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="14"
                           FontFamily="Arial"
                           Margin="0,0,0,10"
                           Foreground="White"
                           />
                <TextBox Name="linkValue" Background="#FFBDD5EA" Grid.Row="1" Height="27"
                         Margin="20,0,20,0"
                         VerticalAlignment ="Top">
                    <TextBox.Effect>
                        <DropShadowEffect/>
                    </TextBox.Effect>
                </TextBox>
                <TextBox Name="pathValue" 
                         DataContext="path"
                         Background="#FFBDD5EA" Grid.Row="2" Height="27"
                         VerticalAlignment="Bottom"
                         Margin="20,0,60,0"
                         >
                    <TextBox.Effect>
                        <DropShadowEffect/>
                    </TextBox.Effect>
                </TextBox>


                <RadioButton x:Name="ScrollingDelay" Content="2 cекунди" VerticalContentAlignment="Center" Grid.Row="3"  HorizontalContentAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,0"/>
                <RadioButton x:Name="ScrollingDelay1" Content="1.5 cекунди" VerticalContentAlignment="Center" Grid.Row="3" Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                <RadioButton x:Name="ScrollingDelay2" Content="1 cекунда" VerticalContentAlignment="Center" Grid.Row="3"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,0"/>
                <Button x:Name="StartBrn" 
                        Background="#FF3E5886"
                        Foreground="White"
                        Grid.Row="4" 
                        VerticalAlignment="Bottom"
                        Height="40" 
                        Content="Почати пошук🔍"
                        VerticalContentAlignment="Center"
                        FontSize="25"
                        Click="StartBrn_Click" BorderBrush="#FF121212" Margin="20,0,20,10" FontWeight="Bold" Cursor="Hand">
                    <Button.FocusVisualStyle>
                        <Style/>
                    </Button.FocusVisualStyle>
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="OpenDialog" 
                    Background="#FF3E5886"
                    Foreground="White"
                    Grid.Row="2" 
                    Content="🖿"
                    VerticalContentAlignment="Center"
                    FontSize="20"
                    Cursor="Hand"
                    Click="OpenDialoSaveAsgBtn" BorderBrush="#FF121212" Height="27" VerticalAlignment="Bottom"  HorizontalAlignment="Right" Margin="0,0,20,0" Width="30">
                    <Button.FocusVisualStyle>
                        <Style/>
                    </Button.FocusVisualStyle>
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
