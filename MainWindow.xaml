<Window x:Class="Selenium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Selenium"
        mc:Ignorable="d"
        Title="MainWindow" Height="270" Width="500">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black">
            <Grid Background="#FF3380CA">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" 
                           Grid.Column="1" 
                           Text="Дадай посилання для пошуку:" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="20,20,20,0"
                           FontSize="25"
                           FontFamily="Arial"/>
                <TextBox Name="Value" Background="#FFBDD5EA" Grid.Row="1" Grid.Column="1" Height="30" Margin="20,0">
                    <TextBox.Effect>
                        <DropShadowEffect/>
                    </TextBox.Effect>
                </TextBox>
                <RadioButton x:Name="ScrollingDelay" Content="2 cекунди" Grid.Row="2" Grid.Column="1"  HorizontalContentAlignment="Left" Margin="15"/>
                <RadioButton x:Name="ScrollingDelay1" Content="1.5 cекунди" Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Center" Margin="15"/>
                <RadioButton x:Name="ScrollingDelay2" Content="1 cекунда" Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Right" Margin="15"/>
                <Button x:Name="StartBrn" 
                        Background="#FF3E5886"
                        Foreground="White"
                        Grid.Row="2" 
                        Height="40" 
                        Content="Почати пошук" 
                        FontSize="20"
                        Click="StartBrn_Click" BorderBrush="#FF121212" Margin="261,53,20,13" Panel.ZIndex="2" FontWeight="Bold" Cursor="Hand" Grid.RowSpan="2">
                    <Button.FocusVisualStyle>
                        <Style/>
                    </Button.FocusVisualStyle>
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="OpenDialog" 
                    Background="#FF87A5DA"
                    Foreground="#FF0A0A0A"
                    Grid.Row="2" 
                    Height="40" 
                    Content="Обрати шлях до файлу з результатами" 
                    FontSize="10"
                    Click="OpenDialoSaveAsgBtn" BorderBrush="#FF121212" Margin="20,53,249,13" FontWeight="Bold"  Grid.RowSpan="2">
                    <Button.FocusVisualStyle>
                        <Style/>
                    </Button.FocusVisualStyle>
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
